<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorAccentLight"
		android:orientation="vertical"
		android:paddingTop="20dp">
		
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/settings_image_view"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_gravity="center"
			/>
		
		<TextView
			android:id="@+id/settings_user_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="3dp"
			android:text="BHARAT KOTESWARAO"
			android:textSize="15dp"
			android:textStyle="bold"
			/>
		
		<TextView
			android:id="@+id/settings_email_id"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:gravity="center"
			android:text="koteswarao.batchu@gmail.com"
			/>
		
		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			app:cardCornerRadius="5dp">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="10dp"
					android:padding="8dp"
					android:text="Profile"
					/>
				
				<TextView
					android:id="@+id/settings_edit_profile_tv"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:foreground="?android:attr/selectableItemBackground"
					android:paddingBottom="15dp"
					android:paddingStart="20dp"
					android:paddingTop="15dp"
					android:text="Edit profile"
					android:textColor="@android:color/black"
					android:textSize="15sp"/>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#e0e0e0"
					/>
				
				<android.support.design.widget.CoordinatorLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:paddingBottom="15dp"
						android:paddingStart="20dp"
						android:paddingTop="15dp"
						android:text="Show notifications"
						android:textColor="@android:color/black"
						android:textSize="15sp"
						/>
					
					<Switch
						android:id="@+id/settings_notifications_switch"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:clickable="true"
						android:foreground="?android:attr/selectableItemBackground"
						android:gravity="end"
						android:paddingBottom="15dp"
						android:paddingEnd="15dp"
						android:paddingTop="15dp"/>
				</android.support.design.widget.CoordinatorLayout>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#e0e0e0"
					/>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:foreground="?android:attr/selectableItemBackground"
					android:paddingBottom="15dp"
					android:paddingStart="20dp"
					android:paddingTop="15dp"
					android:text="Edit car details"
					android:textColor="@android:color/black"
					android:textSize="15sp"/>
			</LinearLayout>
		</android.support.v7.widget.CardView>
		
		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="15dp"
			android:layout_marginEnd="10dp"
			android:layout_marginStart="10dp"
			app:cardCornerRadius="5dp"
			>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="10dp"
					android:padding="8dp"
					android:text="More"
					/>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:foreground="?android:attr/selectableItemBackground"
					android:paddingBottom="15dp"
					android:paddingStart="20dp"
					android:paddingTop="15dp"
					android:text="About us"
					android:textColor="@android:color/black"
					android:textSize="15sp"/>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#e0e0e0"
					/>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:foreground="?android:attr/selectableItemBackground"
					android:paddingBottom="15dp"
					android:paddingStart="20dp"
					android:paddingTop="15dp"
					android:text="Open source licenses"
					android:textColor="@android:color/black"
					android:textSize="15sp"/>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#e0e0e0"
					/>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:foreground="?android:attr/selectableItemBackground"
					android:paddingBottom="15dp"
					android:paddingStart="20dp"
					android:paddingTop="15dp"
					android:text="Give Feedback"
					android:textColor="@android:color/black"
					android:textSize="15sp"/>
				
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#e0e0e0"
					/>
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:foreground="?android:attr/selectableItemBackground"
					android:paddingBottom="15dp"
					android:paddingStart="20dp"
					android:paddingTop="15dp"
					android:text="Sign out"
					android:textColor="@android:color/black"
					android:textSize="15sp"/>
			</LinearLayout>
		</android.support.v7.widget.CardView>
	</LinearLayout>
</android.support.v4.widget.NestedScrollView>
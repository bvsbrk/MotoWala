<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.motowala.AfterLogin.CustomerSignedUp.CustomerLoggedIn"
    tools:showIn="@layout/app_bar_customer_logged_in">

    <TextView
        android:id="@+id/choose_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="Choose a service"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/todayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Today I'd like a" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            app:columnCount="2"
            app:rowCount="2">

            <Button
                android:layout_margin="5dp"
                android:background="@drawable/submit_bg"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:layout_margin="5dp"
                android:background="@drawable/submit_bg"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:layout_margin="5dp"
                android:background="@drawable/submit_bg"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:layout_margin="5dp"
                android:background="@drawable/submit_bg"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />
        </android.support.v7.widget.GridLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="7dp"
            app:elevation="10dp" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:elevation="10dp"
        app:menu="@menu/customer_bottom_nav_menu" />
</LinearLayout>

